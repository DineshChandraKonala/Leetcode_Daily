class Solution {
    public List<List<Integer>> generate(int n) {
        List<List<Integer>> ans = new ArrayList<>();
        for(int i=0;i<n;i++){
            ArrayList<Integer> list = new ArrayList<>();
            for(int j=0;j<=i;j++){
                if(j==0 || j==i){  
                    list.add(1);
                }
                else if((i-1)>=0){
                    int val = ans.get(i-1).get(j) + ans.get(i-1).get(j-1);
                    list.add(val);
                }
            }
            ans.add(list);
        }
        return ans;
    }
}
